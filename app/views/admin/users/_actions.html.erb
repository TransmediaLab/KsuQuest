<%= form_for Score.new, url: award_points_admin_user_path(user), html: {class: 'form-inline'} do |f| %>
  <%= f.text_field :points, class: "input-mini" %>
  <%= f.submit "Award Points", class: 'btn btn-small btn-success' %>
<% end %>

<% if user.freeze_points? %>
  <%= link_to "Unfreeze User", unfreeze_admin_user_path(user), method: :put, class: "btn btn-small btn-warning" %>
<% else %>
  <%= link_to "Freeze User", freeze_admin_user_path(user), method: :put, class: "btn btn-small btn-warning" %>
<% end %>

<%= link_to "History", history_admin_user_path(user), class: "btn btn-small btn-info" %>
<%= link_to "Tasks", tasks_admin_user_path(user), class: "btn btn-small btn-info" %>
<h1 class="page-header">Administrative History for <%= link_to @user.name, @user %></h1>

<div class="row">

  <div class="span8">
  
    <table class="table table-striped table-bordered admin-users-list">
      <thead>
        <tr>
          <th>Date</td>
          <th>Action Taken</th>
          <th>Responsible Admin</th>
        </tr>
      </thead>
      <tbody>
        <% @admin_actions.each do |action| %>
        <tr>
          <th><%= action.created_at %></th>
          <td><%= action.description %></td>
          <td><%= action.admin.name %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

  </div>
  
  <div class="span4">
    <%= render "admin/users/actions", user: @user %>
  </div>

  <h2>Faction Changes</h2>

  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Date</th>
        <th>Changed to Faction</th>
      </tr>
    </thead>
    <tbody>
      <% @faction_changes.each do |change| %>
      <tr>
        <th><%= change.created_at %></th>
        <td><%= change.faction.name %></th>
      </tr>
    </tbody>
    <% end %>
  </table>
  
</div>
